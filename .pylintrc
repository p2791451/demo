[MASTER]
persistent=yes
extension-pkg-whitelist=cv2,numpy,requests,

[REPORTS]
msg-template={path}:{line}:{column}: [{msg_id}({symbol}), {obj}] {msg}
output-format=colorized
reports=no

[MESSAGES CONTROL]
disable=
  bad-continuation,
  bare-except,
  broad-except,
  duplicate-code,
  empty-docstring,
  fixme,
  invalid-name,
  missing-docstring,
  no-self-use,
  protected-access,
  superfluous-parens,
  too-few-public-methods,
  too-many-ancestors,
  too-many-arguments,
  too-many-boolean-expressions,
  too-many-branches,
  too-many-instance-attributes,
  too-many-lines,
  too-many-locals,
  too-many-nested-blocks,
  too-many-public-methods,
  too-many-return-statements,
  too-many-statements,
  wrong-import-position,

ignore=cleanup,
  astro,
  Makefile,
  README.md,
  job_init.py,
  reboot_test.py,
  pytest.ini,
  stbt_rig.py,
  stbt-docker,
  stbt.pyc,
  selftest,
  config,
  maintenance_scripts,

[VARIABLES]
dummy-variables-rgx=_

[FORMAT]
max-line-length=80
